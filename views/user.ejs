<html>
<head>
</head>
<body>
  <section class="content-header">
    <h1>
      Data User
      <small>lihat Data User</small>
    </h1>
    <ol class="breadcrumb">
      <li class = "active"><a href="#"><i class="fa fa-database"></i> Data User</a></li>
    </ol>
  </section>
  <div class="box-header">
    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fa fa-user-plus"></i> Tambah user</button>
    <button class="btn btn-danger" ng-click="hapus()"><i class="fa fa-user-times"></i> Hapus User</button>
  </div>
  <div class ="box-body">
    <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Input data user</h4>
        </div>
        <div class="modal-body">
<div class="form-group">
<label>Nama</label>
<input type="text" class="form-control" ng-model="nama">
</div>
<div class="form-group">
<label>Email</label>
<input type="email" class="form-control" ng-model="email">
</div>
<div class="form-group">
<label>foto</label>
<input type="file" class="form-control" file-model="foto">
</div>
<div class="form-group">
<label>password</label>
<input type="password" class="form-control" ng-model="password">
</div>
<div class="form-group">
<label>Level</label>
<select class="form-control" ng-model="level">
<option value="admin">Admin</option>
<option value="guru">Guru</option>
<option value="murid">Murid</option>
</select>
</div>
      </div>
        <div class="modal-footer">
          <button class="btn btn-primary" ng-click="tambah()"><i class="fa fa-send"></i> Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
  <div id="myModal1" class="modal fade" role="dialog">
  <div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Ubah Data kelas</h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
      <label>Nama</label>
      <input type="text" class="form-control" ng-model="nama">
      </div>
      <div class="form-group">
      <label>Email</label>
      <input type="email" class="form-control" ng-model="email">
      </div>
      <div class="form-group">
      <label>foto</label>
      <input type="file" class="form-control" file-model="foto">
      </div>
      <div class="form-group">
      <label>password</label>
      <input type="password" class="form-control" ng-model="password">
      </div>
      <div class="form-group">
      <label>Level</label>
      <select class="form-control" ng-model="level">
      <option value="admin">Admin</option>
      <option value="guru">Guru</option>
      <option value="murid">Murid</option>
      </select>
      </div>
  </div>
    <div class="modal-footer">
      <button class="btn btn-success" ng-click="actionedit()"><i class="fa fa-send"></i> Submit</button>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
  </div>
  </div>
  <table datatable="ng" dt-columns="dtColumns"dt-options="dtOptions"class="table table-bordered table-striped">
  <thead>
  <th><input type="checkbox" ng-click="checkall()"></th>
  <th>Nama</th>
  <th>Email</th>
  <th>Foto</th>
  <th>Level</th>
  <th>Action</th>
</thead>
  <tbody>
  <tr ng-repeat="item in datauser">
  <td> <input type="checkbox"  checklist-model="user.hapususer" checklist-value="item" role></td>
  <td>{{item.nama}}</td>
  <td>{{item.email}}</td>
  <td><img ng-src="{{item.foto}}" width="100" height="100"></td>
  <td>{{item.level}}</td>
  <td><button class="btn btn-success" data-toggle="modal" ng-click="edit(item)"data-target="#myModal1"><i class="fa fa-edit"></i></button></td>
  </tr>
  </tbody>
  </table>

  </div>
</body>
</html>
