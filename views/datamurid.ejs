<html>
<head>
</head>
<body>
  <section class="content-header">
    <h1>
      Data Murid
      <small>lihat Data Murid</small>
    </h1>
    <ol class="breadcrumb">
      <li class = "active"><a href="#"><i class="fa fa-database"></i> Data Murid</a></li>
    </ol>
  </section>
  <div class="box-header">
    <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus"></i> Tambah Murid</button>
    <button class="btn btn-danger" ng-click="hapus()"><i class="fa fa-trash"></i> Hapus Murid</button>
    <button class="btn btn-danger" ng-click="nonaktif()"><i class="fa fa-trash"></i> Nonaktifkan Murid</button>
  </div>
  <div class ="box-body">
    <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Input data murid</h4>
        </div>
        <div class="modal-body">
        <div class="form-group">
        <label> Nama Murid</label>
        <input type="text" class="form-control" ng-model="nama">
        </div>
        <div class="form-group">
        <label> Kelas</label>
        <select class="form-control" ng-model="kelasku">
          <option ng-repeat="item in kelas" value="{{item.kelas}}">{{item.kelas}}</option>
        </select>
        </div>
    <div class="form-group">
    <label> Tempat Lahir</label>
    <input type="text" class="form-control" ng-model="tempat">
  </div>
  <div class="form-group">
  <label>Tanggal Lahir </label>
<input type="text" class="form-control" ng-model="tanggal">
</div>
<div class="form-group">
<label>Alamat</label>
<textarea class="form-control" ng-model="alamat"></textarea>
</div>
<div class="form-group">
<label>Nomor Telpon </label>
<input type="text" class="form-control" ng-model="notlp">
</div>
<div class="form-group">
<label>Foto</label>
<input type="file" class="form-control" file-model="foto">
</div>
      </div>
        <div class="modal-footer">
          <button class="btn btn-primary" ng-click="tambah()"><i class="fa fa-send"></i> Submit</button>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>

    </div>
  </div>
  <div id="myModal1" class="modal fade" role="dialog">
  <div class="modal-dialog">

  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Ubah Data Murid</h4>
    </div>
    <div class="modal-body">
      <div class="form-group">
      <label> Nama Murid</label>
      <input type="text" class="form-control" ng-model="nama">
      </div>
      <div class="form-group">
      <label> Kelas</label>
      <select class="form-control" ng-model="kelasku">
        <option ng-repeat="item in kelas" value="{{item.kelas}}">{{item.kelas}}</option>
      </select>
      </div>
  <div class="form-group">
  <label> Tempat Lahir</label>
  <input type="text" class="form-control" ng-model="tempat">
</div>
<div class="form-group">
<label>Tanggal Lahir </label>
<input type="text" class="form-control" ng-model="tanggal">
</div>
<div class="form-group">
<label>Alamat</label>
<textarea class="form-control" ng-model="alamat"></textarea>
</div>
<div class="form-group">
<label>Nomor Telpon </label>
<input type="text" class="form-control" ng-model="notlp">
</div>
<div class="form-group">
<label>Foto</label>
<input type="file" class="form-control" file-model="foto">
</div>
  </div>
    <div class="modal-footer">
      <button class="btn btn-success" ng-click="actionedit()"><i class="fa fa-send"></i> Submit</button>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>

  </div>
  </div>
  <table datatable="ng" dt-columns="dtColumns"dt-options="dtOptions"class="table table-bordered table-striped">
  <thead>
  <th><input type="checkbox" ng-click="checkall()"></th>
  <th>Nama</th>
  <th>Kelas</th>
  <th>Tempat Lahir</th>
  <th>Tanggal Lahir</th>
  <th>alamat</th>
  <th>Nomor Telpon</th>
  <th>Status</th>
  <th>Foto</th>
  <th>Action</th>
  </thead>
  <tbody>
  <tr ng-repeat="item in datamurid">
  <td> <input type="checkbox"  checklist-model="user.hapusmurid" checklist-value="item" role></td>
  <td>{{item.nama}}</td>
  <td>{{item.kelas}}</td>
  <td>{{item.tempat}}</td>
  <td>{{item.tanggal}}</td>
  <td>{{item.alamat}}</td>
  <td>{{item.notlp}}</td>
  <td>{{item.status}}</td>
  <td><img src="{{item.foto}}" width="100" height="100"></td>
  <td><button class="btn btn-success" data-toggle="modal" ng-click="edit(item)"data-target="#myModal1"><i class="fa fa-edit"></i></button></td>
  </tr>
  </tbody>
  </table>

  </div>
</body>
</html>
