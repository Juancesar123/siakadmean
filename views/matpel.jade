html
  head
  body
    section.content-header
      h1
        | Data Mata Pelajaran
        small lihat Data Mata Pelajaran
      ol.breadcrumb
        li.active
          a(href='#')
            i.fa.fa-database
            |  Data Mata pelajaran
    .box-header
      button.btn.btn-primary(data-toggle='modal', data-target='#myModal')
        i.fa.fa-plus
        |  Tambah Matpel
      button.btn.btn-danger(ng-click='hapus()')
        i.fa.fa-trash
        |  Hapus Matpel
    .box-body
      #myModal.modal.fade(role='dialog')
        .modal-dialog
          // Modal content
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal') ×
              h4.modal-title Input data Matpel
            .modal-body
              .form-group
                label Mata Pelajaran
                input.form-control(type='text', ng-model='matpel')
            .modal-footer
              button.btn.btn-primary(ng-click='tambah()')
                i.fa.fa-send
                |  Submit
              button.btn.btn-default(type='button', data-dismiss='modal') Close
      #myModal1.modal.fade(role='dialog')
        .modal-dialog
          // Modal content
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal') ×
              h4.modal-title Ubah Data Matpel
            .modal-body
              .form-group
                label Mata Pelajaran
                input.form-control(type='text', ng-model='matpel')
            .modal-footer
              button.btn.btn-success(ng-click='actionedit()')
                i.fa.fa-send
                |  Submit
              button.btn.btn-default(type='button', data-dismiss='modal') Close
      table.table.table-bordered.table-striped(datatable='ng', dt-columns='dtColumns', dt-options='dtOptions')
        thead
          th
            input(type='checkbox', ng-click='checkall()')
          th Mata Pelajaran
          th Action
        tbody
          tr(ng-repeat='item in matapel')
            td
              input(type='checkbox', checklist-model='user.hapusmatpel', checklist-value='item._id', role='')
            td {{item.matpel}}
            td
              button.btn.btn-success(data-toggle='modal', ng-click='edit(item)', data-target='#myModal1')
                i.fa.fa-edit
